@using Ecommerce_Web.Models.ViewModels
@model List<ProductVM>
@{
    ViewData["Title"] = "Product List";
}
<div class="row pt-4 pb-4">
	<div class="col-6">
		<h2>List of Product</h2>
	</div>
	<div class="col-6">
		<a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create a Product</a>
	</div>
</div>

<div>
	<table class="table table-bordered">
		<thead>
			<tr>
				<td>Name</td>
				<td>Category</td>
				<td>Price</td>
				<td>CreateAt</td>
				<td>IsActive</td>
				<td>Image</td>
				<td>Action</td>
			</tr>
		</thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.CategoryName</td>
                    <td>@product.Price</td>
                    <td>@product.CreateAt</td>
                    <td>@product.IsActive</td>

                    <!-- IMAGE COLUMN -->
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" width="60" alt="product image"
                                 style="object-fit:cover; border-radius:6px;" />
                        }
                        else
                        {
                            <span class="text-muted">Image not added</span>
                        }
                    </td>

                    <!-- ACTION COLUMN -->
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

	</table>
</div>