@using Ecommerce_Web.Models
@model IEnumerable<Category>
<div class="row pt-4 pb-4">
	<div class="col-6">
		<h2>List of Categories</h2>
	</div>
	<div class="col-6">
		<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create a Category</a>
	</div>
</div>

<div>
	<table class="table table-bordered">
		<thead>
			<tr>
				<td>Category Name</td>
				<td>Description</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var category in Model)
			{
				<tr>
					<td>@category.Name</td>
					<td>@category.Description</td>
					<td>
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>