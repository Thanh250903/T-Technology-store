@using Ecommerce_Web.Models
@model List<Category>

@{
    ViewData["Title"] = "Category List";
}

<div class="common-index container py-4">
    <!-- Header -->
    <div class="common-index__header">
        <h2 class="common-index__title">List of Categories</h2>

        <a asp-controller="Category" asp-action="Create" class="btn btn-success">
            Add new category
        </a>
    </div>

    <!-- Table card -->
    <div class="common-table-card">
        <table class="table common-table">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Description</td>
                    <td style="width:160px; text-align:center;">Action</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <div class="action-btns">
                                <a asp-controller="Category"
                                   asp-action="Edit"
                                   asp-route-id="@category.Id"
                                   class="btn btn-primary btn-sm">
                                    Edit
                                </a>

                                <a asp-controller="Category"
                                   asp-action="Delete"
                                   asp-route-id="@category.Id"
                                   class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
