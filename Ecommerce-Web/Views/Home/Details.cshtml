@using Ecommerce_Web.Models
@using Ecommerce_Web.Models.Catalog
@model Product

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">← Back</a>
    <main class="productDetails" >
       <div class="productDetails_grid">

        <!-- Left: gallery -->
        <section class="productGrallery">

            <!-- Title + rating + links nằm bên trái -->
            <header class="productGrallery_header">
                <h1 class="productInfo_title">@Model.Name</h1>

                <div class="productGrallery_metaRow">
                    <span class="productGrallery_rating">⭐ </span>
                    <span class="productGrallery_reviews">... rating</span>
                </div>

                <nav class="productGrallery_actions">
                    <a href="#" class="productGrallery_action">♡ Favorite</a>
                    <a href="#" class="productGrallery_action">💬 Ask</a>
                    <a href="#" class="productGrallery_action">⚙ Configuration</a>
                </nav>
            </header>

            <div class="productGallery_main">
                <div class="productGallery_img">
                    <img src="@Url.Content(Model.ImageUrl ?? "~/img/no-image.png")"
                         alt="@Model.Name" />
                </div>
            </div>

        </section>

        <!-- Right: product info -->
        <aside class="productRight">

            <section class="priceCardLite">
                <div class="priceCardLite_col">
                    <div class="priceCardLite_label">Price</div>

                    <div class="productInfo_price">@Model.Price.ToString("N0")đ</div>

                </div>

                <div class="priceCardLite_col">
                    <div class="priceInforPrice_old">@((Model.Price * 1.2m).ToString("N0"))đ</div>
                </div>
            </section>

            <div class="ctaBox">
                <button class="btn btn-danger btn-lg w-100">🛒 Add to cart</button>
            </div>

            @if (Model.Category != null)
            {
                <div class="productInfo_meta mt-3">Category: @Model.Category.Name</div>
            }
        </aside>


       </div>
    </main>

@section styles{
    <link rel="stylesheet" href="~/css/productDetail.css" asp-append-version="true" />
}  

