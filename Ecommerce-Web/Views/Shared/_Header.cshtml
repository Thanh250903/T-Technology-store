<header class="main-header">
    <div class="header-container">

        <!-- Logo -->
        <div class="header-logo">
            <a href="/">
                <span class="logo-red">Tien Thanh</span>
                <span class="logo-white">TECHNOLOGY</span>
            </a>
        </div>

        <!-- Search -->
        <div class="header-search">
            <select class="search-category">
                <option>Tất cả danh mục</option>
                <option>Laptop</option>
                <option>PC</option>
                <option>Linh kiện</option>
            </select>

            <input type="text"
                   placeholder="Nhập tên sản phẩm, mã sản phẩm, từ khóa..." />

            <button class="search-btn">
                🔍
            </button>
        </div>

        <!-- Actions -->
        <div class="header-actions">
            <partial name="_LoginPartial" />

            <a asp-area="User" asp-controller="Cart" asp-action="Index" class="header-item">
                🛒
                <span>Giỏ hàng</span>
            </a>
        </div>

    </div>
</header>
