@model Ecommerce_Web.Areas.Identity.Models.LoginVM
@{
    ViewData["Title"] = "Log in";
}

<form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ReturnUrl" />

    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />

    <label asp-for="Password"></label>
    <input asp-for="Password" class="form-control" />

    <input asp-for="RememberMe" />

   <a asp-area="Identity" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary">
      Login
    </a>

    <a asp-area="Identity" asp-controller="Account" asp-action="Register"
       asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-success">
        Register here
    </a>
</form>
