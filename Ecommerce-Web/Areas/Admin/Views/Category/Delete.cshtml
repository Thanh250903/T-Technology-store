@using Ecommerce_Web.Models
@model Category
<h2>Delete Category</h2>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled />
        </div>

        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled />
        </div>

        <button type="submit" asp-action="Delete" class="btn btn-danger">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary">Back to list</a>
    </div>

</form>