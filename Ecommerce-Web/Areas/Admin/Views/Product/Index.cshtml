@using Ecommerce_Web.Models.ViewModels
@model List<ProductVM>

@{
    ViewData["Title"] = "Product List";
}

<div class="product-index container py-4">

    <!-- Header -->
    <div class="product-index__header">
        <h2 class="product-index__title">List of Products</h2>

        <a asp-controller="Product" asp-action="Create" class="btn btn-success">
            Add new Product
        </a>
    </div>

    <!-- Toolbar -->
    <div class="product-index__toolbar">
        <div class="product-index__toolbar-left">
            <div class="product-index__search">
                <span class="product-index__search-icon">🔎</span>
                <input class="form-control product-index__search-input"
                       type="text"
                       placeholder="Search a product" />
            </div>
        </div>

        <div class="product-index__toolbar-right">
            <select class="form-select product-index__select">
                <option selected>Filter by</option>
                <option>Name</option>
                <option>Category</option>
                <option>Day create</option>
                <option>Active status</option>
            </select>

            <select class="form-select product-index__select">
                <option selected>Sort by</option>
                <option>Price low-high</option>
                <option>Price high-low</option>
                <option>Newest</option>
            </select>
        </div>
    </div>

    <!-- Table card -->
    <div class="product-index__table-card">
        <table class="table product-index__table">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Category</td>
                    <td>Price</td>
                    <td>CreateAt</td>
                    <td class="product-index__status-cell">Status</td>
                    <td class="product-index__img-cell">Image</td>
                    <td class="product-index__actions-cell">Action</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.CategoryName</td>
                        <td>@product.Price</td>
                        <td>@product.CreateAt</td>

                        <td class="product-index__status-cell">
                            @if (product.IsActive)
                            {
                                <span class="product-index__status product-index__status--active" title="Active">
                                    <i class="bi bi-check-lg"></i>
                                    Active
                                </span>
                            }
                            else
                            {
                                <span class="product-index__status product-index__status--inactive" title="Inactive">
                                    <i class="bi bi-x-lg"></i>
                                    Inactive
                                </span>
                            }
                        </td>

                        <td class="product-index__img-cell">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <div class="product-index__img-box">
                                    <img src="@product.ImageUrl" class="product-index__img" alt="product image" />
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Image not added</span>
                            }
                        </td>

                        <td class="product-index__actions-cell">
                            <div class="product-index__actions">
                                <a asp-controller="Product"
                                   asp-action="Edit"
                                   asp-route-id="@product.Id"
                                   class="btn btn-primary btn-sm">
                                    Edit
                                </a>

                                <a asp-controller="Product"
                                   asp-action="Delete"
                                   asp-route-id="@product.Id"
                                   class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/product-index.css" asp-append-version="true" />
}
