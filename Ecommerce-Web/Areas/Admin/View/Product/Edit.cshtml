@using Ecommerce_Web.Models.ViewModels
@model ProductVM

<h2>Edit product</h2>
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="mb-3 row">
          <label asp-for="Name"></label>
          <input asp-for="Name" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="Price"></label>
            <input asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId"
                    class="form-select"
                     asp-items="Model.Categories">
            <option value="">--Select Category--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="CreateAt"></label>
            <input asp-for="CreateAt" />
            <span asp-validation-for="CreateAt" class="text-danger"></span>
        </div>

        <div class="mb-4 d-flex align-items-center gap-1">
            <label asp-for="IsActive" class="form-check-label mb-0"></label>
            <input asp-for="IsActive" class="form-check-input" />
        </div>

        <div class="mb-3 row">
            <label class="mb-2">Image</label>

            <div class="img-preview-wrapper mb-2" style="display:inline-block;">
                @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                {
                    <img id="imgThumb" src="@Model.ImageUrl" class="img-thumb" alt="current image" />
                }
                else
                {
                    <img id="imgThumb" src="" class="img-thumb d-none" alt="current image" />
                }
            </div>

            <input type="file" name="formFile" id="formFile" class="form-control mt-2" />
        </div>
        <button type="submit" asp-controller="Product" asp-action="Edit" class="btn btn-primary">Edit</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">Back to list</a>

        </div>
</form>

<div id="imageZoomOverlay" class="image-zoom-overlay" aria-hidden="true">
    <div class="image-zoom-content" role="dialog" aria-modal="true">
        <button type="button" id="imageZoomClose" class="image-zoom-close" aria-label="Close">✕</button>
        <img id="imageZoomImg" src="" alt="Zoom image" />
    </div>
</div>

